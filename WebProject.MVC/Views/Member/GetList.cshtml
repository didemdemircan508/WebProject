@model List<UserPrimeDto>
@{
    Layout = "_MemberLayout";
    ViewBag.Title = "Kullanıcı Girişleri";
}

<div id="modelPlaceHolder" aria-hidden="true"></div>
<div class="card mb-4 mt-2">
    <div class="card-header">
        <i class="fas fa-table mr-1"></i>
        Kullanıcı Girişleri
    </div>
    <div class="card-body">
        <div class="spinner-border" role="status" style="display:none;">
            <span class="sr-only">Yükleniyor...</span>
        </div>
        <div class="table-responsive">
            <table class="table table-bordered" id="rolesTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Kullanıcı ID</th>
                        <th>Girilen Sayılar</th>
                        <th>Asal Sayı</th>

                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Kullanıcı ID</th>
                        <th>Girilen Sayılar</th>
                        <th>Asal Sayı</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.UserId</td>
                            <td>@user.Numbers</td>
                            @if(@user.LargestPrimeNumber==0)
                            {
                               <td>-</td>
                            }
                            else
                            {
                              <td>@user.LargestPrimeNumber</td>
                            }
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>